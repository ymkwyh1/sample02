<div class="container">
  <h3>All boards</h3>
  <% @boards.each do |board| %>
    <div class="board">
      <p class="board_name"><%= board.name %></p>
      <p class="board_content"><%= board.content %></p>
      <div class="dropdown">
          <%= image_tag 'actions.svg', class: 'dropbtn' %>
          <div class="dropdown-content mini">
            <%= link_to 'Edit', edit_board_path(board) %>
            <%= link_to 'Delete', board_path(board), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' } %>
          </div>
      </div>
    </div>
  <% end %>
  <div>
    <div class="board add_button">
      <%= link_to '+ Add new board', new_board_path %>
    </div>
  </div>
</div>
