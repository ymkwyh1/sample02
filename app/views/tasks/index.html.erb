<div class="container">

  <div class="task headline">
    <h3><%= @board.name %></h3>
  </div>

  <% @tasks.each do |task| %>
    <%= link_to board_task_path(board_id: @board.id, id: task.id) do %>
      <div class="task">
        <p class="task_name"><%= task.name %></p>
        <p class="task_content"><%= task.content %></p>
        <% if task.user.profile&.avatar&.attached? %>
          <%= image_tag task.user.profile.avatar, class: 'task_avatar' %>
        <% else %>
          <%= image_tag 'default-avatar.png', class: 'task_avatar' %>
        <% end %>
        <% if current_user && current_user.id = task.user_id%>
          <div class="dropdown">
            <%= image_tag 'actions.svg', class: 'dropbtn' %>
            <div class="dropdown-content mini">
              <%= link_to 'Edit', edit_board_task_path(board_id: @board.id, id:task.id) %>
              <%= link_to 'Delete', board_task_path(board_id: @board.id, id:task.id), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' } %>
            </div>
        </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <div class="task add_button">
    <%= link_to '+ Add new card', new_board_task_path(board_id: @board.id) %>
  </div>
</div>