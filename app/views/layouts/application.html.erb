<!DOCTYPE html>
<html>
  <head>
    <title>Sample02</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <div class="header_title">
          <% unless current_page?(root_path) %>
            <%= link_to :back do %>
              <p><</p>
            <% end %>
          <% end %>
          <%= link_to root_path do %>
            <h2>Boards</h2>
          <% end %>
        </div>

        <% if user_signed_in? %>
          <div class="dropdown">
            <% if current_user.profile&.avatar&.attached? %>
              <%= image_tag current_user.profile.avatar, class: 'header_avatar dropbtn' %>
            <% else %>
              <%= image_tag 'default-avatar.png', class: 'header_avatar dropbtn' %>
            <% end %>
            <div class="dropdown-content mini">
              <%= link_to 'Profile', profile_path %>
              <%= link_to 'Sign out', destroy_user_session_path, data: { method: 'delete' } %>
            </div>
          </div>
        <% else %>
          <% if current_page?(root_path) %>
            <%= link_to new_user_session_path do %>
              <p class="header_signIn">Sign in</p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
